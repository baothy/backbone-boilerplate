html, body { height:100%; }

.quiz-marker {

  .hockey-banner {
    top: 118px !important;
    left: -33px !important;
    width: 667px !important;

    .quiz {
      width: 630px;
      height: 100%;
      left: 15px;
      position: relative;
      top: 7px;
      overflow: hidden;

      .prev {
        left: 200px;
        position: relative;
      }

      .next {
        left: 300px;
        position: relative;
      }

      fieldset {
        width: 100%;
        position: absolute;

        &.animation {
          transition: left 1s;
          -webkit-transition: left 0.5s;
        }

        &:nth-of-type(1) {
          left: 0;
        }

        &:nth-of-type(2) {
          left: 100%;
        }

        &:nth-of-type(3) {
          left: 200%;
        }

        &:nth-of-type(4) {
          left: 300%;
        }

        &.qcm {

          height: 450px;

          img {
            border: none !important;
            box-shadow: none;
            border-radius: 0 !important;
            height: 354px;
            width: 624px;
            position: absolute;
            bottom: 19px;
          }

          ul {
            margin-top: 33px;
            width: 280px;
            position: relative;
            left: 334px;

            li {
              background-color: transparent;
              width: 280px !important;
              height: 51px;
              border-radius: 5px;
              box-shadow: 1px 1px 0 3px #000;
              margin: 11px 0 6px 0;

              &:hover {
                cursor: pointer;
              }

              .overlay-qcm-answer {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border-radius: 2px;
                background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#383838), color-stop(100%,#222222));
                background: gradient(linear, left top, left bottom, color-stop(0%,#383838), color-stop(100%,#222222));
                background: linear-gradient(linear, left top, left bottom, color-stop(0%,#383838), color-stop(100%,#222222));
                background: -moz-linear-gradient(top, #383838 0%, #222222 100%);
                background: -ms-linear-gradient(top, #383838 0%, #222222 100%);
                opacity: 0.9;

                &~p {
                  text-align: left;
                  text-indent: 13px;
                  line-height: 23px;
                  position: relative;
                }
              }
            }
          }
        }

        &> span {
          background-color: #222222;
          width: 100%;
          color: #fff;
          border-top: 2px solid #000;
          border-bottom: 2px solid #000;
          text-align: left;
          padding-left: 17px;
          padding-top: 16px;
          height: 77px;
          position: relative;
          display: block;
          top: 0px;
          font-size: 16px;
        }

        ul {
          margin-top: 30px;
          li {
            margin-bottom: 10px;
            border-radius: 5px;
            background-color: #000;
            color: #fff;
            padding: 8px;
            width: 65%;
            right: 12px;
            position: relative;
            float: right;
            text-align: left;

            &:hover {
              // background-color: gray;
            }

            &.right {
              background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));
              background: -moz-gradient(top, #a0db4f 0%, #65c531 100%);
              background: -ms-gradient(top, #a0db4f 0%, #65c531 100%);
              background: gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));

              &::after {
                content: '';
                position: absolute;
                top: 4px;
                left: -42px;
                background-image: url('../imgs/mobile/checkmark.png');
                background-repeat: no-repeat;
                background-size: 100%;
                height: 34px;
                width: 38px;
              }

              div {
                background-color: transparent !important;
                opacity: 1 !important;
              }

              .overlay-qcm-answer {
                display: none;
              }
            }

            &.wrong {
              background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #d42c4e), color-stop(100%, #ca2035));
              background: -moz-gradient(top, #d42c4e 0%, #ca2035 100%);
              background: -ms-gradient(top, #d42c4e 0%, #ca2035 100%);
              background: gradient(linear, left top, left bottom, color-stop(0%, #d42c4e), color-stop(100%, #ca2035));

              &::after {
                content: '';
                position: absolute;
                top: 2px;
                left: -43px;
                background-image: url('../imgs/mobile/checkmark-fail.png');
                background-repeat: no-repeat;
                background-size: 100%;
                height: 38px;
                width: 38px;
              }

              div {
                background-color: transparent !important;
                opacity: 1 !important;
              }

              .overlay-qcm-answer {
                display: none;
              }
            }
          }
        }

        &.hide {
          display: none;
        }

      }

      .containerWeekQuiz {
        z-index: 1;
        overflow: hidden;
        height: 528px;
        width: 628px;
        position: relative;
        left: 0;
        right: 0;
        margin: 0 auto;
        border: 2px solid #000;
        margin-bottom: 20px;
        box-shadow: 3px 3px #000;
        top: 0;

        h2 {
          font-family: bradbun;
          text-shadow: 3px 3px #000;
          font-size: 35px;
          text-align: left;
          color: #fff;
          height: 93px;
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ff7701), color-stop(100%, #de2545));
          background: -moz-linear-gradient(top, #ff7701 0%, #de2545 100%);
          background: -ms-linear-gradient(top, #ff7701 0%, #de2545 100%);
          background: gradient(linear, left top, left bottom, color-stop(0%, #ff7701), color-stop(100%, #de2545));
          padding-left: 18px;
          padding-top: 19px;
          position: absolute;
          width: 100%;
          top: -93px;

         span {
            position: absolute;
            top: 64px;
            left: 17px;
            width: 100%;
            padding: 0;
            display: block;
            background: none;
            font-size: 15px;
            text-align: left;
            border-top: none;
            -webkit-border-top-left-radius: 0;
            -webkit-border-top-right-radius: 0;
            margin-top: -11px;
            color: #fff !important;
            font-family: arial;
            font-weight: bold;
            text-shadow: 2px 2px #000;
          }
        }

      }

      .nextQuestion {
        font-family: bradbun;
        color: #fff;
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));
        background: -moz-linear-gradient(top, #a0db4f 0%, #65c531 100%);
        background: -ms-linear-gradient(top, #a0db4f 0%, #65c531 100%);
        background: gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));
        width: 280px !important;
        height: 51px;
        border-radius: 5px;
        font-size: 27px;
        left: 0;
        right: 0;
        margin: 0 auto;
        text-shadow: 3px 1px #000;
        line-height: 45px;
        box-shadow: 2px 2px #000;
        border: 2px solid #000;
        margin-top: 0px;
        /* top: 15px; */
        position: absolute;
        bottom: 50px;
        text-align: center;
        text-shadow: 2px 2px #000;

        sup {
          font-size: 10px;
        }

        &:hover {
          cursor: pointer;
        }

      }

      .answer {
        height: 87%;
      }

      .quiz1 {
        .container-correctAnswer, .container-wrongAnswer, .container-answer {
          h2 {

          }

          h3 {
            border-bottom: none;
            margin-bottom: 21px;
            text-shadow: 3px 3px #000;
          }

          p {
            border-top: none;
            font-size: 14px;
            font-family: arial;
            line-height: 16px;
          }

          .text-green {
            color: #6cc02a !important;
            font-weight: bold;
          }
        }
      }

      .quiz2 {
        p {
          font-size: 30px !important;
          line-height: 25px !important;
          top: -5px;
          padding-top: 15px;
          padding-bottom: 15px;
          position: relative;
        }

      }

      .container-correctAnswer, .container-wrongAnswer, .container-answer {
        width: 100%;
        height: 100%;
        background-color: #222222;
        position: absolute;
        z-index: 10;
        left: 0;
        display: none;

        li {
          &.opacity {
            opacity: 0.2;
          }
        }

        h3 {
          color: #6cc02a;
          font-family: bradbun;
          display: block;
          font-size: 30px;
          margin-top: 0px;
          height: 58px;
          line-height: 58px;
          border-bottom: 2px solid #070003;

          &::after {
            content: '';
            position: absolute;
            background-image: none;
            background-repeat: no-repeat;
            background-size: 100%;
            width: 28px;
            height: 25px;
            top: 11px;
            left: 34px;
          }
        }

        p {
          color: #fff !important;
          font-size: 30px;
          padding-left: 16px;
          padding-right: 16px;
          line-height: 20px;
          border-top: 2px solid #424342;
          font-family: bradbun;
          line-height: 60px;
          text-shadow: 3px 3px #000;
        }

        .rewards {
          margin-top: 0px;
          width: 100%;
          overflow: auto;
          margin-bottom: -10px;

          li {
            text-align: center;
            width: 50%;
            float: left;
            background-color: transparent !important;
            overflow: hidden;

            div {
              background-color: transparent !important;
              background-size: 100%;
              background-repeat: no-repeat;
              background-position: 5px 5px;
              z-index: -1;
            }

            &:nth-child(1) {
              div {
                position: absolute;
                top: -7px;
                left: 5px;
                background-image: url('../imgs/mobile/reward-placeholder-1.png');
                height: 215px;
                width: 215px;
                background-size: 99%;
                right: 0;
                bottom: 0;
                margin: auto;
              }
            }

            &:nth-child(2) {
              div {
                position: absolute;
                top: 0;
                left: 0;
                height: 240px;
                width: 240px;
                background-image: url('../imgs/mobile/reward-placeholder-2.png');
                background-size: 99%;
                right: 0;
                bottom: 0;
                margin: auto;
              }
            }


            img {
              max-height: 200px;
              border: none !important;
              -webkit-box-shadow: none !important;
            }
          }
        }

      }

      .container-wrongAnswer {
        h3 {
          color: #d61c35;

          &::after {
            content: '';
            background-image: none;
            left: 24px;
          }
        }

        p {
          font-size: 13px;
          padding-left: 9px;
          padding-right: 9px;
        }

        .rewards {
          margin-top: 0px;
          width: 90%;
          margin-left: 35%;
          overflow: auto;
          margin-bottom: -10px;

          li {
            width: 40%;
            float: left;
            background-color: transparent !important;

            img {
              max-height: 200px;
              border: none !important;
              -webkit-box-shadow: none !important;
            }

            img:last-child {
              position: absolute;
              width: 200px;
              height: 200px;
              top: 16px;
              left: 16px;
            }
          }
        }

      }

      #wrapper {
        width: 637px;
        min-width:320px;
        height:100%;
        overflow: auto;
      }

      #nav {
        position:absolute;
        z-index:100;
        top:8px;
        width:200px;
        height:20px;
        left:50%;
        background:rgba(0,0,0,0.75);
        padding:0;
        margin:0 0 0 -100px;
        -webkit-border-radius:10px;
      }

      #nav li {
        display:block;
        float:left;
        width:14px;
        height:14px; line-height:14px;
        -webkit-border-radius:7px;
        background:rgba(255,255,255,0.1);
        overflow:hidden;
        padding:0;
        margin:3px 11px 0 0;
        text-align:center;
      }

      #nav li#prev {
        margin-left:5px;
        background:transparent;
      }

      #nav li#next {
        margin-right:0;
        background:transparent;
      }

      #nav li.selected {
        background:rgba(255,255,255,0.4);
      }

      #swipeview-slider > div {
        position:relative;
        display:-webkit-box;
        -webkit-box-orient:vertical;
        -webkit-box-pack:center;
        -webkit-box-align:center;
        overflow:hidden;
        margin-top: 49px;
      }

      #swipeview-slider img {
        display:block;
        border:5px solid #eee;
        -webkit-box-shadow:0 2px 6px #000;
        -webkit-border-radius:2px;
        // -webkit-transition-duration:.4s;
        // -webkit-transition-property:opacity;
        opacity:1;
        pointer-events:none;
      }

