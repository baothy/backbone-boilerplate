  }

  .firstList {
    margin-bottom: 31px;
  }

  h2 {
    text-align: left;
    font-weight: bold;
    font-family: BradBun;
    clear: both;
    margin-left: 31px;
    letter-spacing: 0px;

    &.zone3 {
      &::after {
        content: '';
        .img-background('logos/zone3-credits.png', 123px, 33px);
        position: absolute;
        background-size: 123px 33px;
        right: 42px;
        margin-top: -12px;
      }
    }

    &.lvl {
      margin-top: 376px;
      &::after {
        content: '';
        .img-background('logos/lvl-credits.png', 54px, 30px);
        position: absolute;
        background-size: 54px 30px;
        right: 40px;
        margin-top: -12px;
      }
    }

    &.teleqc {
      margin-top: 397px;
      &::after {
        content: '';
        .img-background('logos/teleqc-credits.png', 62px, 44px);
        position: absolute;
        background-size: 62px 44px;
        right: 40px;
        margin-top: -27px;
      }
    }
  }

  h1 {

    &.title {
      color: #000;
      font-size: 26px;
      font-family: BradBun;
      margin: 20px auto;
      display: block;
      position: relative;
      left: -212px;
      top: 21px;
      margin-bottom: 90px;

      &::after {
        content: '';
        position: absolute;
        background-image: url('../imgs/assets/logos/quebecor-credits.png');
        background-size: 182px 70px;
        width: 182px;
        height: 70px;
        background-repeat: no-repeat;
        top: -16px;
        left: 674px;
      }

      &::before {
        content: '';
        position: absolute;
        background-image: url('../imgs/assets/logos/cmf-credit.png');
        // background-size: 60% 60%;
        width: 193px;
        height: 47px;
        background-repeat: no-repeat;
        top: -1px;
        left: 890px;
      }
    }
  }

  section {
    margin-top: 40px;
  }

  ul {
    float: left;
    font-size: 15px;
    letter-spacing: 0;
    margin-right: 111px;
    width: 320px;
    margin-top: -14px;
    margin-left: 31px;

    li {
      font-size: 15px;
      line-height: 20px;
      text-align: left;

      &.occupation {
