.signup {
  width: 840px;
  height: 700px;
  header {
    .img-background('popup-bg-header.png', 100%, 75px);
    background-repeat: repeat;

    .rejoins-a-gang-title {
      .img-background('signup-rejoins-gang.png', 573px, 38px);
      margin: 0 auto;
      top: 21px;
      position: relative;
    }

    .update-profile-title {
      font-size: 36px;
      text-align: center;
      font-family: BradBun;
      color: #fff;
      line-height: 69px;
    }

    .bt-close {
      .img-background('bt-close.png', 51px, 45px);
      right: 20px;
      position: absolute;
      top: 15px;

      &:hover {
        cursor: pointer;
        background-image: url('../imgs/assets/bt-close-hover.png');
      }
    }
  }
  section {
    padding: 0 72px;

    &> fieldset {
      .img-background('fieldset-bg-purple.png', 100%, 350px);
      background-repeat: repeat;
      border: 3px solid #eee6f6;
      padding-left: 28px;
      width: 663px;

      .message {
        visibility: hidden;
        &.display {
          visibility: visible;
        }
      }

      li {
        position: relative;
        margin-top: 20px;
        height: 60px !important;
        width: 315px !important;
         input {
          position: relative;
          top: 22px;
          height: 30px;
          border: 2px solid #000;
          width: 280px;
          margin-left: -38px;
          font-size: 15px;
         }

         .error {
          position: absolute;
          .img-background('error.png', 31px, 29px);
          display: inline-block;
          top: 22px;
          right: -12px !important;
         }

         .validate {
          position: absolute;
          .img-background('validate.png', 39px, 31px);
          display: inline-block;
          top: 19px;
          right: -30px !important;
         }

         span {
          &.message {
            position: absolute;
            bottom: -12px;
            left: 0;
            color: red;
            font-size: 11px;

            &.nicknameUsed {
              bottom: 12px;
              left: 275px;
              width: 200px;
            }
          }
        }
      }

      .firstname {
        .img-background('firstname.png', 106px, 18px);
      }

      .nickname {
        .img-background('nickname.png', 100px, 15px);
        height: 67px !important;
        &> span {
          &.info {
            color: #e71b00;
            font-size: 10px;
            letter-spacing: 0px;
            font-style: italic;
            margin-top: 12px;
            position: relative;
            top: 11px;
            margin-left: -66px;
          }
        }

        input {
          top: 16px;
        }
      }

      .email {
        .img-background('email.png', 111px, 15px);
        // height: 70px !important;
        float: left;

        &::after {
          content: '';
          width: 36px;
          height: 5px;
          position: absolute;
          top: 35px;
          right: 0px;
          border-top: 2px solid #000;
        }
      }

      .email-confirm {
        .img-background('email-confirm.png', 196px, 15px);
        float: left;
      }

      .pwd {
        .img-background('pwd.png', 162px, 15px);
        float: left;
        margin-top: 27px;

        &::after {
          content: '';
          width: 36px;
          height: 5px;
          position: absolute;
          top: 35px;
          right: 0px;
          border-top: 2px solid #000;
        }
      }

      .pwd-confirm {
        .img-background('pwd-confirm.png', 247px, 15px);
        float: left;
        margin-top: 27px;
      }
    }

    .signup-btn {
      width: 276px;
      height: 60px;
      background-color: #6225b0;
      color: #fff;
      text-shadow: 2px 2px 0px #000;
      box-shadow: 3px 3px 0px #000;
      border-radius: 5px;
      border: 2px solid #000;
      font-weight: bold;
      line-height: 60px;
      margin: 0 auto;
      position: relative;
      top: 20px;
      font-size: 25px;

      &:hover {
        cursor: pointer;
      }
    }

  }

  footer {
    .update-btn {
      width: 276px;
      height: 60px;
      background-color: #6225b0;
      color: #fff;
      text-shadow: 2px 2px 0px #000;
      box-shadow: 3px 3px 0px #000;
      border-radius: 5px;
      border: 2px solid #000;
      font-weight: bold;
      line-height: 60px;
      font-size: 28px;
      font-family: BradBun;
      color: #fff;
      float: left;
      margin-left: 20px;
      margin-right: 20px;
      // margin: 0 auto;

      &:hover {
        cursor: pointer;
      }
    }

    .cancel-btn {
      width: 276px;
      height: 60px;
      background-color: #6225b0;
      color: #fff;
      text-shadow: 2px 2px 0px #000;
      box-shadow: 3px 3px 0px #000;
      border-radius: 5px;
      border: 2px solid #000;
      font-weight: bold;
      line-height: 60px;
      font-size: 28px;
      font-family: BradBun;
      color: #fff;
      float: left;
      margin-left: 20px;
      margin-right: 20px;
      // margin: 0 auto;

      &:hover {
        cursor: pointer;
      }
    }

    .cb {
      text-align: left;
      p {
        margin-top: 20px;
        margin-bottom: 20px;
        margin-left: 31px;

        span {
          font-style: italic;
          left: 14px;
          position: relative;
          margin-left: -15px;
          color: #000;

          &.message {
            visibility: hidden;
            position: absolute;
            bottom: 140px;
            left: 131px;
            color: red;
            font-size: 11px;
            &.display {
              visibility: visible;
            }
          }
        }
      }
    }

  }
}

