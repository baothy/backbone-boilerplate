.notLogged {
  .avatar-create, .play, .play-with-friends {
    display: none;
  }

  .ready-play-text {
    display: block;
  }

  #container .col3 h1 {
    top: 20px;
  }

  .rectangle_orange {
    &.play {
      top: 142px !important;
    }
  }

  .le-jeu {
    top: 37px !important;
  }
}

.logged {
  .play, .play-with-friends, .ready-play-text, .login {
    display: none;
  }

  #container .col3 {

    background-image: url('../imgs/assets/avatar-sliced.png?v=2'), url('../imgs/assets/bg-col3.png');
    background-size: 250px 306px, 242px 299px;
    background-position: -8px -2px, 0 0;
    h1, .play, .discover-game {
      display: none !important;
    }

    .avatar-create {
      top: 174px !important;
    }
  }

  .le-jeu {
    top: 37px !important;
  }

  .rectangle_orange {
    &.play {
      top: 82px !important;
    }
  }

  &.isAvatar {
    .avatar-create, .dispo-banner {
      display: none;
    }
    .play, .play-with-friends {
      display: block;
    }

    .ready-play-text {
      display: none;
    }

    .le-jeu {
      top: 27px;
    }

  }
}

#container {
  min-height: 600px;
  width: 977px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80px;
  color: #fff;
  // overflow: visible;
  position: relative;
  top: -53px;

  p, span {
    color: #fff;
  }

  div {
    float: left;
  }

  .col1 {
    width: 225px;
    text-shadow: 2px 2px 0px #000;
    margin-right: 0;
    margin-top: -1px;
    padding-left: 3px;
    .img-background('subito-box.png', 244px, 300px);

    h1 {
      font-size: 39px;
      &.subito-texto-txt {
        .img-background('subito-texto.png', 214px, 30px);
        top: 7px;
        position: relative;
        left: 8px;
      }
    }
    p {
      font-size: 13px;
      width: 202px;
      text-align: left;
      text-shadow: none;
      color: #007377;
      margin-top: 19px;
      margin-left: 9px;
      letter-spacing: 0px;
      line-height: 15px;
    }

    .rounded_rectangle {
      // background-image: url('../imgs/assets/rounded_rectangle.png');
      // background-size: 222px 125px;
      width: 222px;
      height: 125px;
      margin-top: -12px;
      margin-left: 4px;
      position: relative;

      .skwat-logo {
        .img-background('skwat-logo.png', 75px, 25px);
        position: absolute;
        top: 29px;
        right: 38px;
      }

      .watch-episode-txt {
        width: 95px;
        position: absolute;
        height: 40px;
        font-style: italic;
        font-size: 10px;
        color: #000;
        text-shadow: none;
        top: 26px;
        left: 7px;
        font-weight: bold;
        line-height: 14px;
        letter-spacing: 0px;
        text-align: left;
      }

      .rectangle_orange {
        position: relative;
        left: 5px;
