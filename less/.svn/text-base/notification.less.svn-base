.notification {
  color: #fff;
  width: 25px;
  height: 25px;
  border: 2px solid #000;
  background-color: #202020;
  line-height: 19px;
  position: absolute;
  top: -10px;
  right: -12px;
  font-family: bradbun;
  font-size: 15px;
  border-top-left-radius: 90px;
  border-top-right-radius: 90px;
  border-bottom-left-radius: 90px;
  border-bottom-right-radius: 90px;
  text-align: center;
  display: none;
}
