
.game-popup, .avatar-popup {
  width: 968px;
  height: 644px;
  background-color: transparent;
  .img-background('container-jeu.png', 968px, 644px);
  box-shadow: none;

  .avatar-container {
    margin: 0 auto;

    .confirm-close {
      display: none;
      width: 450px;
      height: 250px;
      position: absolute;
      z-index: 100;

      background-image: -ms-linear-gradient(top, #50C8C8 0%, #1C8177 100%);
      background-image: -moz-linear-gradient(top, #50C8C8 0%, #1C8177 100%);
      background-image: -o-linear-gradient(top, #50C8C8 0%, #1C8177 100%);
      background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #50C8C8), color-stop(1, #1C8177));
      background-image: -webkit-linear-gradient(top, #50C8C8 0%, #1C8177 100%);
      background-image: linear-gradient(to bottom, #50C8C8 0%, #1C8177 100%);

      top: 0;
      left: 0;
      right: 0;
      bottom: inherit;
      margin: auto;
      margin-top: 232px;
      box-shadow: 2px 2px 2px #000;

      .title {
        top: 50px;
        position: relative;
        font-size: 26px;
        font-family: bradBun;
        color: #000;
      }

      .close {
        width: 185px;
        height: 45px;
        border: solid 2px #000;
        box-shadow: 2px 2px #000;
        margin-top: 105px;
        margin-left: 30px;
        border-radius: 5px;
        line-height: 42px;
        float: left;
        background-color: lighten(#50C8C8, 5%);

        &:hover {
          background-color: darken(#50C8C8, 35%);
          cursor: pointer;
        }
      }

      .cancel {
        width: 185px;
        height: 45px;
        border: solid 2px #000;
        box-shadow: 2px 2px #000;
        margin-left: 232px;
        margin-top: 105px;
        border-radius: 5px;
        line-height: 42px;
        background-color: lighten(#50C8C8, 15%);

        &:hover {
          background-color: darken(#50C8C8, 35%);
          cursor: pointer;
        }
      }
    }
  }

  header {
    width: 950px;
    height: 74px;
    margin-left: 4px;
    margin-top: 2px;

    .title {
      color: #fff;
      font-size: 45px;
      text-shadow: 2px 2px 0px #000;
      font-family: bradBun;
      line-height: 68px;
    }

    .bt-close {
      .img-background('bt-close.png', 51px, 45px);
      right: 25px;
      position: absolute;
      top: 15px;

      &:hover {
        cursor: pointer;
        background-image: url('../imgs/assets/bt-close-hover.png');
      }
    }
  }

  .avatar-container {
    margin: 0 auto;
  }
}

.game-popup {
  header {
    .bt-close {
      right: 27px;
      position: absolute;
      top: 37px;
      font-size: 14px;
      letter-spacing: 0px;
      text-decoration: underline;
      color: #fff;
      background-image: none;
      width: 100px;
      &:hover {
        background-image: none;
        cursor: pointer;
      }
    }
  }
}


.custom-green {
  .game-popup, .avatar-popup {
    header {
      background-image: url('../imgs/assets/bg-header-login-green.png');
    }
  }
}

.custom-gray {
  .game-popup, .avatar-popup {
    header {
      background-image: url('../imgs/assets/bg-header-login-gray.png');
    }
  }
}

.custom-dark-blue {
  .game-popup, .avatar-popup {
    header {
      background-image: url('../imgs/assets/bg-header-login-dark-blue.png');
    }
  }
}

.custom-red {
  .game-popup, .avatar-popup {
    header {
      background-image: url('../imgs/assets/bg-header-login-red2.png');
    }
  }
}

.videotutorial {
  background-color: transparent;
  .img-background('tutorialvideo-container.png', 800px, 605px);
  width: 697px;
  height: 483px;
  box-shadow: 5px 5px #000;
  overflow: hidden;

  header {
    // width: 800px;
    top: 1px;
    position: relative;
    height: 46px;
    left: 2px;

    .title {
      color: #fff;
      font-size: 36px;
      text-shadow: 2px 2px 0px #000;
      font-family: bradBun;
      line-height: 44px;
    }

    .bt-close {
      .img-background('bt-close.png', 51px, 45px);
      right: 25px;
      position: absolute;
      top: 15px;

      &:hover {
        cursor: pointer;
        background-image: url('../imgs/assets/bt-close-hover.png');
      }
    }
  }

}