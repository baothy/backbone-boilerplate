html, body { height:100%; }

.survey-marker {

  .hockey-banner {

    top: 123px !important;
    left: -33px !important;
    width: 667px !important;

    .survey {
      width: 630px;
      height: 100%;
      left: 15px;
      position: relative;
      top: 3px;
      overflow: hidden;

      .prev {
        left: 200px;
        position: relative;
      }

      .next {
        left: 300px;
        position: relative;
      }

      fieldset {
        width: 100%;
        position: absolute;
        transition: left 1s;
        -webkit-transition: left 0.5s;

        &.animation {
        }

        &:nth-of-type(1) {
          left: 0;
        }

        &:nth-of-type(2) {
          left: 100%;
        }

        &:nth-of-type(3) {
          left: 200%;
        }

        &:nth-of-type(4) {
          left: 300%;
        }

        &.qcm {

          height: 450px;

          img {
            border: none !important;
            box-shadow: none;
            border-radius: 0 !important;
            height: 344px;
            width: 624px;
            position: absolute;
            bottom: 17px;
            left: 0;
          }

          ul {
            margin-top: 0;
            overflow: auto;
            top: 126px;
            position: relative;
            width: 100%;
            padding-top: 2px;
            overflow: hidden;

            li {
              background-color: transparent;
              width: 282px;
              height: 51px;
              border-top-left-radius: 5px;
              border-top-right-radius: 5px;
              border-bottom-right-radius: 5px;
              border-bottom-left-radius: 5px;
              box-shadow: 1px 1px 0 3px #000;
              margin-bottom: 17px;
              left: 322px;

              .percentA, .percentB, .percentC {
                margin-left: 10px;
                position: absolute;
                left: -311px;
                height: 53px;
                background-color: #1b1b4c;
                width: 279px;
                top: -1px;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
                border-bottom-right-radius: 5px;
                border-bottom-left-radius: 5px;
                text-align: center;
                line-height: 40px;
                // box-shadow: 2px 2px #000;
                border: 2px solid #000;

                &> div:first-child {
                  position: absolute;
                  top: 0px;
                  left: 0px;
                  transition: width 0.5s ease-in-out;
                  -webkit-transition: width 0.5s ease-in-out;
                  background-color: #4545c4;
                  height: 100%;
                  border-top-left-radius: 5px;
                  border-bottom-left-radius: 5px;
                }

                &> div:last-child {
                  color: #fff !important;
                  font-family: bradbun !important;
                  float: none !important;
                  position: relative;
                  line-height: 43px;
                  font-size: 39px;

                  &.brightnessLow {
                    opacity: 0.3;
                  }

                }

                &.hide {
                  display: none;
                }
              }

              .overlay-qcm-answer {
                position: absolute;
                top: 0;
                left: 0;
                width: 282px;
                height: 51px;
                border-top-left-radius: 2px;
                border-top-right-radius: 2px;
                border-bottom-right-radius: 2px;
                border-bottom-left-radius: 2px;
                background-color: #000;
                opacity: 0.7;
                color: #fff;
                text-shadow: 2px 2px #000;
                padding-left: 20px;
                font-size: 13px;
                line-height: 48px;
                font-family: arial;
                font-weight: bold;

                &:hover {
                  cursor: pointer;
                }
              }
            }
          }
        }

        legend {
          background-color: #222222;
          width: 96%;
          color: #fff;
          border-top: 2px solid #000;
          border-bottom: 3px solid #000;
          text-align: left;
          padding-left: 18px;
          height: 69px;
          font-size: 16px;
          padding-top: 15px;
          position: relative;
          padding-right: 10px;
          top: 0px;
          line-height: 18px;
        }

        ul {
          margin-top: 30px;
          li {
            margin-bottom: 10px;
            border-radius: 5px;
            background-color: #000;
            color: #fff;
            padding: 8px;
            width: 65%;
            right: 12px;
            position: relative;
            text-align: left;

            &:hover {
              // background-color: gray;
            }

            &.right {
              background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));
              background: -moz-linear-gradient(top, #a0db4f 0%, #65c531 100%);
              background: -ms-linear-gradient(top, #a0db4f 0%, #65c531 100%);
              background: gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));

              .overlay-qcm-answer {
                background-color: transparent !important;
                opacity: 1 !important;
              }
            }

            &.wrong {
              background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #d42c4e), color-stop(100%, #ca2035));
              background: -moz-linear-gradient(top, #d42c4e 0%, #ca2035 100%);
              background: -ms-linear-gradient(top, #d42c4e 0%, #ca2035 100%);
              background: gradient(linear, left top, left bottom, color-stop(0%, #d42c4e), color-stop(100%, #ca2035));

               div {
                background-color: transparent !important;
                opacity: 1 !important;
              }
            }
          }
        }

        &.hide {
          display: none;
        }

      }

      .containerItemSurvey {
        z-index: 1;
        overflow: hidden;
        height: 528px;
        width: 628px;
        position: relative;
        left: 0;
        right: 0;
        margin: 0 auto;
        border: 2px solid #000;
        margin-bottom: 20px;
        box-shadow: 3px 3px #000;

        h2 {
          font-family: bradbun;
          text-shadow: 3px 3px #000;
          font-size: 36px;
          text-align: left;
          color: #fff;
          height: 93px;
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2192d1), color-stop(100%, #5427c0));
          background: -moz-linear-gradient(top, #2192d1 0%, #5427c0 100%);
          background: -ms-linear-gradient(top, #2192d1 0%, #5427c0 100%);
          background: gradient(linear, left top, left bottom, color-stop(0%, #2192d1), color-stop(100%, #5427c0));
          padding-left: 21px;
          line-height: 89px;
        }
      }

      .nextQuestion {
        font-family: bradbun;
        color: #fff;
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));
        background: -moz-linear-gradient(top, #a0db4f 0%, #65c531 100%);
        background: -ms-linear-gradient(top, #a0db4f 0%, #65c531 100%);
        background: gradient(linear, left top, left bottom, color-stop(0%, #a0db4f), color-stop(100%, #65c531));
        height: 40px;
        width: 90%;
        border-radius: 2px;
        font-size: 27px;
        left: 0;
        right: 0;
        margin: 0 auto;
        position: relative;
        text-shadow: 2px 2px #000;
        line-height: 36px;
        box-shadow: 2px 2px #000;
        border: 2px solid #000;
        margin-top: 0px;
        left: 5%;

        sup {
          font-size: 10px;
        }

      }

      .answer {
        height: 87%;
      }

      .container-correctAnswer, .container-wrongAnswer, .container-answer {
        width: 100%;
        height: 100%;
        background-color: #222222;
        position: absolute;
        z-index: 10;
        left: 0;
        display: none;

        h3 {
          color: #6cc02a;
          font-family: bradbun;
          display: block;
          font-size: 25px;
          margin-top: 11px;

          &::after {
            content: '';
            position: absolute;
            background-image: url('../imgs/mobile/checkmark.png');
            background-repeat: no-repeat;
            background-size: 100%;
            width: 28px;
            height: 25px;
            top: 11px;
            left: 34px;
          }
        }

        p {
          color: #fff !important;
          font-size: 14px;
          padding-left: 16px;
          padding-right: 16px;
          line-height: 20px;
        }

        .rewards {
          margin-top: 0px;
          width: 90%;
          margin-left: 16%;
          overflow: auto;
          margin-bottom: -10px;

          li {
            width: 40%;
            float: left;
            background-color: transparent !important;

            img {
              max-width: 100px;
              border: none !important;
              -webkit-box-shadow: none !important;
            }
          }
        }

      }

      .container-wrongAnswer {
        h3 {
          color: #d61c35;

          &::after {
            content: '';
            background-image: url('../imgs/mobile/checkmark-fail.png');
            left: 24px;
          }
        }

        p {
          font-size: 13px;
          padding-left: 9px;
          padding-right: 9px;
        }

        .rewards {
          margin-top: 0px;
          width: 90%;
          margin-left: 35%;
          overflow: auto;
          margin-bottom: -10px;

          li {
            width: 40%;
            float: left;
            background-color: transparent !important;

            img {
              max-width: 100px;
              border: none !important;
              -webkit-box-shadow: none !important;
            }

            img:last-child {
              position: absolute;
              max-width: 80px;
              top: 16px;
              left: 16px;
            }
          }
        }

      }

      #wrapper {
        overflow: auto;
        width: 637px;
        min-width:320px;
        height:100%;
      }

      #nav {
        position:absolute;
        z-index:100;
        top:8px;
        width:200px;
        height:20px;
        left:50%;
        background:rgba(0,0,0,0.75);
        padding:0;
        margin:0 0 0 -100px;
        -webkit-border-radius:10px;
      }

      #nav li {
        display:block;
        float:left;
        width:14px;
        height:14px; line-height:14px;
        -webkit-border-radius:7px;
        background:rgba(255,255,255,0.1);
        overflow:hidden;
        padding:0;
        margin:3px 11px 0 0;
        text-align:center;
      }

      #nav li#prev {
        margin-left:5px;
        background:transparent;
      }

      #nav li#next {
        margin-right:0;
        background:transparent;
      }

      #nav li.selected {
        background:rgba(255,255,255,0.4);
      }

      #swipeview-slider > div {
        position:relative;
        display:-webkit-box;
        -webkit-box-orient:vertical;
        -webkit-box-pack:center;
        -webkit-box-align:center;
        overflow:hidden;
        // margin-top: 49px;
      }

      #swipeview-slider img {
        // display:block;
        // border:5px solid #eee;
        // -webkit-box-shadow:0 2px 6px #000;
        // -webkit-border-radius:2px;
        // -webkit-transition-duration:.4s;
