body {
  background: #000;
  font-family: Oswald;
}

#content {
  /*text-shadow: 2.5px 2.5px 1px #000;*/
}

#inner-container {
  width: 973px;
  height: 710px;
  margin: auto;
  background-image: url('../imgs/assets/bg-content.jpg');
  position: relative;
  left: -5px;
}
#menu {
  background: #444;
  height: 30px; color: #fff; text-align: right;
}
#menu ul {
  list-style: none;
  margin: 0; padding: 0;
}
#menu ul li {
  float: left;
  margin-left: 10px;
}
#menu ul li a {
  color: #fff;
  line-height: 30px;
  text-decoration: none;
}
#menu ul li a:hover {
  color: #ccc;
}

#container {
  padding: 20px;
  width: 1024px;
  margin-left: auto;
  margin-right: auto;
}

h1{
  padding: 0;
  margin: 0;
}
#page {
  // padding: 20px;
  // width: 1024px;
  // margin-left: auto;
  // margin-right: auto;
  /*overflow: hidden;*/
}

 #page .main {
    display: block;
    position:relative;
    top: 0px;
    left: 0px;
    padding: 0px;
    margin: 0px;
    width: 500px;
    float: left;
    overflow: hidden;
  }

ul {
  list-style: none;
}


/* HEADER */

#content > header {
  width: 972px;
  height: 140px;
  margin: auto;
  background-image: url('../imgs/assets/bg-header.jpg');
  background-repeat:no-repeat;
  position: relative;
  left: -4px;
}

#header {
  float: left;
  width: 950px;
  margin-left: 10px;
  text-shadow: 2.5px 2.5px 1px #000;
  font-family: Arial;
}

#header .user .vl {
  position: absolute;
  height: 39px;
  width: 1px;
  border-left: 2px solid #fff;
  top: 3px;
  left: 239px;
}

header {
  font-family: gunplayrg;
  text-transform: uppercase;
}


@font-face {
  /*src: url('../fonts/gunplay3d.ttf')*/
  font-family: 'gunplay3d';
  src: url('../fonts/gunplay3d.eot');
  src: url('../fonts/gunplay3d.eot?#iefix') format('embedded-opentype'),
       url('../fonts/gunplay3d.woff') format('woff'),
       url('../fonts/gunplay3d.ttf') format('truetype'),
       url('../fonts/gunplay3d.svg#gunplay3d') format('svg');
}

@font-face {
  /*src: url('../fonts/gunplayrg.ttf')*/
  font-family: 'gunplayrg';
  src: url('../fonts/gunplayrg.eot');
  src: url('../fonts/gunplayrg.eot?#iefix') format('embedded-opentype'),
       url('../fonts/gunplayrg.woff') format('woff'),
       url('../fonts/gunplayrg.ttf') format('truetype'),
       url('../fonts/gunplayrg.svg#gunplayrg') format('svg');

}

@font-face {
  font-family: 'crackin';
  src: url('../fonts/crackin.ttf')
}

.border-image {
  border: 5px solid #fff;
}

.float-left {
  float: left;
}

footer {
  position: relative;
}


#footer-inner {
  width: 100% !important;
  height: 65px;
  background-color: rgba(0, 0, 0, 0.85) !important;
  border-top: 3px solid #fff;
  position: absolute;
  bottom: 0px;
}

#footer-inner a {
  color: #fff !important;
  text-decoration: none;
  line-height: 1.2;
  font-size: 16px;
  margin: 20px;
  left: 353px;
  position: relative;
  top: 26px;
  text-decoration: underline !important;
}

.box-shadow-black {
  box-shadow: 4px 4px black;
}


#footer li {
  line-height: 0;
}

#genericFooter .copy {
  position: relative;
  bottom: 5px;
}
